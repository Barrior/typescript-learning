{
  "name": "typescript-learning",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && tscpaths -p tsconfig.json -s ./ -o ./dist",
    "start": "nodemon src/index.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src/",
      "@types/",
      "package.json",
      "tsconfig.json"
    ],
    "execMap": {
      "ts": "ts-node"
    }
  },
  "dependencies": {
    "ts-node": "8.5.4",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "3.7.3"
  },
  "devDependencies": {
    "nodemon": "1.18.4",
    "prettier": "^1.19.1"
  },
  "license": "MIT"
}
